package game.utils.init;

import java.util.HashMap;

import game.Game;
import game.audio.AudioFile;

public class InitAudio implements Runnable {

	public static volatile HashMap<String, AudioFile> musicFiles;
	public static volatile String[] audioFileNames = {"PlayerDash1" , "PlayerDash2" , "PlayerDash3" , "PlayerDash4", "PlayerDead", "PlayerFall1", "PlayerJump1", "PlayerJump2" };

	@Override
	public void run() {
		System.out.println("Loading Audio");
		
		for(String s : audioFileNames) {
			System.out.println(s);
			musicFiles.put(s, new AudioFile("src/assets/audio/" + s + ".wav"));
			//System.out.println(s);
		}
		
		System.out.println("Audio Loaded");
		Game.taskComplete++;
	}
	
}
