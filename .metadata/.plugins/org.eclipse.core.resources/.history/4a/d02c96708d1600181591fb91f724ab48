package game.entity;

import java.awt.Rectangle;

import game.render.textures.Texture;
import game.world.TileMap;

public class Boop extends Mob {
	
	public double displacement;
	public double spawnPointX;

	public Boop(Texture texture, double x, double y, TileMap tileMap, Rectangle AABB, double speed, double displacement) {
		super(texture, x, y, tileMap, AABB);
		this.motionX = speed;
		this.spawnPointX = x;
		this.displacement = displacement;
	}

	@Override
	public void setDead() {
		this.AABB = null;
	}
	
	@Override
	public void tick() {
		if (Math.abs(x - spawnPointX) > displacement) {
			this.motionX = -motionX;
		}
	}
	
	@Override
	public void move() {

		tileMap.calculateNPCCollision(this, x, y, motionX, motionY);
		y+= getMotionY();
		x+= getMotionX();
	}
}
